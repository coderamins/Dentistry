@page
@model Dentistry.WebUI.Pages.OrderListModel
@{
}

<h2>@ViewData["Title"]</h2>

@if (Model.Orders != null && Model.Orders.Any())
{
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group pb-3">
                <label for="DentistNameFilter">نام دندانپزشک</label>
                <input type="text" id="DentistNameFilter" name="DentistNameFilter" class="form-control" value="@Model.DentistNameFilter" placeholder="نام دندانپزشک را وارد کنید" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">

            <div class="form-group pb-3">
                <label for="StartDateFilter">تاریخ شروع</label>
                <input type="date" id="StartDateFilter" name="StartDateFilter" class="form-control" value="@Model.StartDateFilter?.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group pb-3">
                <label for="EndDateFilter">تاریخ پایان</label>
                <input type="date" id="EndDateFilter" name="EndDateFilter" class="form-control" value="@Model.EndDateFilter?.ToString("yyyy-MM-dd")" />
            </div>
        </div>
    </div>

    <div class="form-group pb-3">
        <button type="submit" class="btn btn-primary">جستحجو</button>
    </div>



    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="p-4">
                        <div class="flex items-center">
                            <input id="checkbox-all-search" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                            <label for="checkbox-all-search" class="sr-only">checkbox</label>
                        </div>
                    </th>
                    <th scope="col" class="px-6 py-3">
                        شناسه سفارش
                    </th>
                    <th scope="col" class="px-6 py-3">
                        تاریخ ثبت
                    </th>
                    <th scope="col" class="px-6 py-3">
                        نام بیمار
                    </th>
                    <th scope="col" class="px-6 py-3">
                        کد ملی بیمار
                    </th>
                    <th scope="col" class="px-6 py-3">
                        شماره موبایل بیمار
                    </th>
                    <th scope="col" class="px-6 py-3">
                        نام دندانپزشک
                    </th>
                    <th scope="col" class="px-6 py-3">
                        تخصص دندانپزشک
                    </th>
                    <th scope="col" class="px-6 py-3">
                        شماره موبایل دندانپزشک
                    </th>
                    <th scope="col" class="px-6 py-3">
                        وضعیت
                    </th>
                    <th scope="col" class="px-6 py-3">
                        
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="w-4 p-4">
                            <div class="flex items-center">
                                <input id="checkbox-table-search-1" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                                <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
                            </div>
                        </td>
                        <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            @order.Id
                        </td>
                        <td class="px-6 py-4">
                            @order.CreatedDate
                        </td>
                        <td class="px-6 py-4">
                            @order.PatientFullName
                        </td>
                        <td class="px-6 py-4">
                            @order.PatientNationalId
                        </td>
                        <td class="px-6 py-4">
                            @order.PatientMobileNo
                        </td>
                        <td class="px-6 py-4">
                            @order.DentistFullName
                        </td>
                        <td class="px-6 py-4">
                            @order.DentistSpecialty
                        </td>
                        <td class="px-6 py-4">
                            @order.DentistMobileNo
                        </td>
                        <td class="px-6 py-4">
                            @order.OrderStatusDesc
                        </td>
                        <td class="flex items-center px-6 py-4">
                            <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">تایید</a>
                            <a href="#" class="font-medium text-red-600 dark:text-red-500 hover:underline ms-3">عدم تایید</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <p>هیچ سفارشی یافت نشد.</p>
}
