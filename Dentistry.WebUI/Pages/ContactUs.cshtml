@page
@model Dentistry.WebUI.Pages.ContactUsModel
@{
}


<div class="container mt-4">
    <h2>فرم تماس با ما</h2>

    <form method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">نام کامل</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Contact.Name" required />
        </div>

        <div class="mb-3">
            <label for="Email" class="form-label">ایمیل</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Contact.Email" required />
        </div>

        <div class="mb-3">
            <label for="Phone" class="form-label">شماره تلفن</label>
            <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Contact.Phone" />
        </div>

        <div class="mb-3">
            <label for="Message" class="form-label">پیام شما</label>
            <textarea class="form-control" id="Message" name="Message" rows="4" required>@Model.Contact.Message</textarea>
        </div>

        <button type="submit" class="btn btn-primary">ارسال پیام</button>
    </form>
</div>


